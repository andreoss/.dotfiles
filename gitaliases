[alias]
    ack      = !git ls-files | ack --files-from=-
    au       = add --all
    blame    = blame -w
    bu       = !git rev-parse --abbrev-ref --symbolic-full-name @{u}
    cc       = clone
    cia      = commit --amend --no-edit
    ci       = commit
    cm       = commit -m
    co       = checkout
    count    = shortlog -sn
    cp       = cherry-pick
    d        = diff
    dx       = diff --staged
    fe       = fetch --all
    hard     = reset --hard
    hot      = "!f() { git log --all --find-copies --find-renames --name-only --format='format:' \"$@\" | grep -v '^$' | sort | uniq -c | sort -rn | less ;};f"
    last     = log -1 head
    lg       = log --oneline --graph --decorate --all
    ll       = log --pretty='%c(yellow)%h %c(cyan)%cd %cblue%an%c(auto)%d %creset%s' --graph --date=relative --date-order
    lm       = log --oneline -10
    lp       = log -p
    ls       = ls-files
    ls-tree  = ls-tree -r --name-only
    pmm      = pull origin master
    pm       = pull origin main
    p        = pull
    pufo     = push --force-with-lease
    pu       = push
    pure     = pull --rebase
    ra       = rebase --abort
    rc       = rebase --continue
    re       = reset
    rhm      = reset --hard origin/master
    rs       = rebase --skip
    sa       = stash apply
    sc       = clone --depth=1
    sc       = stash clear
    sl       = stash list
    soft     = reset --soft
    sp       = stash pop
    ss       = stash push
    st       = status -s -b
    unstage  = reset head --
    xx       = reset head~1
